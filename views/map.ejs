<%- include('includes/header') %>

<div class="container my-5">
  <div class="card text-center paddings">
      <div class="row">

        <div class="col-lg-8 col-sm-12">
          <div id="map" class="mb-4 divboxes">
            <!-- Map will be displayed here -->
          </div>
        
          <div id="mapForm" class="p-3 rounded shadow-sm divboxes">
            <div class="row g-3">
        
              <!-- Search Radius -->
              <div class="col-md-4 col-lg-4">
                <label for="radius" class="form-label">Search Radius</label>
                <select id="radius" class="form-select">
                  <option value="2000">2KM</option>
                  <option value="5000">5KM</option>
                  <option value="10000">10KM</option>
                  <option value="15000">15KM</option>
                  <option value="20000">20KM</option>
                </select>
              </div>
              <!-- Open Now -->
              <div class="col-md-3 col-lg-3">
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="openNow">
                  <label class="form-check-label" for="openNow">Open Now</label>
                </div>
              </div>
        
              <!-- Pet Type -->
              <div class="col-md-5 col-lg-5">
                <label for="type" class="form-label">Pet Type</label>
                <select id="type" class="form-select">
                  <option value="">Any</option>
                  <option value="dog">Dog</option>
                  <option value="cat">Cat</option>
                  <option value="exotic">Exotic</option>
                  <option value="rodent">Rodent</option>
                  <option value="reptile">Reptile</option>
                  <option value="small mammal">Small Mammal</option>
                  <option value="avian">Avian</option>
                </select>
              </div>
        
              <!-- Search by Location -->
              <div class="col-md-6 col-lg-6 ">
                <div class="form-check mb-2 text-lg-left text-md-left text-sm-center">
                  <input type="checkbox" class="form-check-input " id="locationBox">
                  <label class="form-check-label" for="locationBox">Search by Location</label>
                </div>
                <input id="location" type="text" class="form-control" placeholder="e.g., Oshawa, Ontario" hidden>
              </div>
        
              <!-- Search Button -->
              <div class="col-md-6 col-sm-12 d-flex align-items-end">
                <button type="button" class="btn btn-primary w-100 buttonformat" id="search">Search for Vets</button>
              </div>
              <!-- Error Message Box (Hidden by Default) -->
              <div id="mapErrorBox" class="alert alert-danger d-none text-center mt-3"></div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-sm-12" id="results-panel"></div>
  </div>  
</div> 


<script src="/js/helpers.js"></script>
<script src="/js/search.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3an3cMi9r5yYxWfFeb1I6VzPOrkrlzgM&amp;callback=initMap&amp;libraries=places,marker,geometry&loading=async" async="true" defer="true"></script>
<script src="/js/map.js"></script>

<%- include('includes/footer') %>