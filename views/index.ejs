<%- include('includes/header') %>

<div class="container-fluid my-5">
  <!-- First Row: Main Card with Carousel -->
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body text-center">
          <h1 class="card-title">Toebeans Vet Finder</h1>
        </div>
        <!-- Carousel -->
        <div id="petCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/img/lionelwallace.jpg" alt="Two rats coming out of their cage">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/img/cloud.jpg" alt="Sleeping grey cat">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/img/jerome.jpg" alt="Brown pleco in fish tank">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> <!--Closes First Row -->

  <!-- Second Row: Quote & Welcome Message -->
  <div class="row justify-content-center mt-4">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body">
          <blockquote class="blockquote mb-0 text-center">
            <p>“Until one has loved an animal, a part of one’s soul remains unawakened.”</p>
            <footer class="blockquote-footer"><cite>Anatole France</cite></footer>
          </blockquote>
        </div>
      </div>
    </div>
  </div> 

  <!-- Third Row: Welcome Message -->
  <div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card-body">
          <h5 class="card-text">Welcome to the Toebeans Vet Finder website!</h5>
        </div>
    </div>
  </div> 
</div> 

<script src="/js/index.js"></script>

<%- include('includes/footer') %>
