<%- include('includes/header') %>

<div class="container-fluid my-5 text-center">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">

      <div class="card text-center mb-4 divboxes">
        <div class="card-body">
          <h1 class="card-title">User Settings Page</h1>
        </div>
      </div>

      <!-- Theme Selector -->
      <div class="card mb-4 divboxes">
        <div class="card-body">
          <h5 class="card-title">Select a Theme</h5>
          <form action="/settings" method="POST" id="themeform">
            <div class="form-group">
              <select id="theme" name="theme" class="form-select mb-3">
                <option value="none">No Theme</option>
                <option value="dog">Dogs ğŸ¶</option>
                <option value="cat">Cats ğŸ±</option>
                <option value="fish">Fish ğŸŸ</option>
                <option value="bird">Birds ğŸ£</option>
                <option value="smallpet">Small Pets ğŸ¹</option>
              </select>
              <button type="submit" class="btn btn-primary buttonformat">Change Theme</button>
            </div>
            <p id="errormsg"></p>
          </form>
        </div>
      </div>

      <!-- Favourite Vets List -->
      <div class="card mb-4 divboxes">
        <div class="card-body">
          <h5 class="card-title">Favourite Vets</h5>
          <div id="favourites" class="my-scrollbox">
            <p>Loading Favourites...</p>
          </div>
        </div>
      </div>

      <!-- Delete Account -->
      <div class="card text-center divboxes">
        <div class="card-body">
          <p class="text-danger fw-bold">WARNING! THIS IS PERMANENT</p>
          <button type="button" id="delete_account" class="btn btn-danger">
            Delete Your Account?
          </button>
        </div>
      </div>

    </div>
  </div>
</div>


<script src="/js/settings.js" defer></script>
<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3an3cMi9r5yYxWfFeb1I6VzPOrkrlzgM&amp;libraries=places&loading=async"
  async="true"
  defer="true"
></script>
<!-- Bottom-Center Toast -->
<div aria-live="polite" aria-atomic="true"
     style="position: fixed; bottom: 1rem; left: 50%; transform: translateX(-50%);
            z-index: 1050;">
  <div id="liveToast" class="toast divboxes" style="min-width: 250px;" data-delay="3000">
    <div class="toast-header">
      <strong class="mr-auto" id="toastTitle">Notification</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body" id="toastBody">Hello world! This is a toast message.</div>
  </div>
</div>


<%- include('includes/footer') %>
