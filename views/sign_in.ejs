<%- include('includes/header') %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Sign In</h2>

            <form id="sign_in">
                <!-- Username -->
                <div class="form-group">
                    <label for="user_name" class="form-label">Username:</label>
                    <input id="user_name" type="text" class="form-control" placeholder="Enter your username" required>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" class="form-control" placeholder="Enter your password" required>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" id="submit" class="btn btn-primary w-100">Sign In</button>
                </div>
            </form>

            <!-- Sign Up Link -->
            <p class="mt-3 text-center">New user? <a href="/sign_up">Sign up here.</a></p>

            <!-- Message Box -->
            <div id="message" class="alert alert-danger d-none mt-3 text-center"></div>
        </div>
    </div>
</div>

<script src="/js/sign_in.js"></script>
<%- include('includes/footer') %>
